<% @title = "signup" %>
<body class="signin">
<div class="container">
  <div class="row">
    <div class="col-md-12">
       <div class="separator"></div>
         <div class="fa-btn centered-login">
           <%= button_to user_omniauth_authorize_path(:facebook), :class => "btn-fa-social" do%>
           <i class="fa fa-facebook fa-lg"></i>Signup with facebook
           <%end%>
         </div>
         <div class="hr">
          <div class="inner">or</div> 
         </div>
      <div class="login centered-login">
        <%= devise_error_messages! %>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %> 
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, :autofocus => true, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :username %><br/>
            <%= f.text_field :username , class: "form-control" %>
          </div>
          <div class="form-group">
              <%= f.label :email %><br/>
              <%= f.email_field :email, autofocus: true ,class: "form-control"%>
          </div>
           <div class="form-group">
            <%= f.label :password %>
            <% if @validatable %>
            <em>(<%= @minimum_password_length %> caracteres minimum)</em>
            <% end %><br/>
            <%= f.password_field :password, autocomplete: "off",class: "form-control" %>
          </div>

          <div class="form-group">
           <%= f.label :password_confirmation %><br/>
           <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>

            <span class="agreed">
            En vous inscrivant, vous acceptez nos conditions <%=link_to "d'utilisation", privacy_path%> et <a> politique de confidentialit√©</a>
            </span><br>

          <%= f.button "S'enregistrer" , class: 'btn btn-login', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Enregistrement en cours..."} %>
        <% end %>
         <div class="retrieve">
          <%= render "devise/shared/links" %>
        </div> 
      </div>
    </div>
  </div>
</div>
<div class="hr"></div>