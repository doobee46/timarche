<% @title = "signup" %>
<%= render :partial => 'shared/connected'%>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="login centered-login">
        <%= devise_error_messages! %>
        <button type="button" class="btn btn-twt-social"><i class="fa fa-twitter fa-lg"></i>
        S'enregistrer avec twitter 
        </button>
        <div class="separator"></div>
        <button type="button" class="btn btn-fa-social"><i class="fa fa-facebook fa-lg"></i>
        S'enregistrer avec facebook 
        </button><br>       
        <p>...Ou creer votre compte avec un nom d'utilisateur et un mot de passe :</p>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %> 
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, :autofocus => true, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :username %><br/>
            <%= f.text_field :username , class: "form-control" %>
          </div>
          <div class="form-group">
              <%= f.label :email %><br/>
              <%= f.email_field :email, autofocus: true ,class: "form-control"%>
          </div>
           <div class="form-group">
            <%= f.label :password %>
            <% if @validatable %>
            <em>(<%= @minimum_password_length %> caracteres minimum)</em>
            <% end %><br/>
            <%= f.password_field :password, autocomplete: "off",class: "form-control" %>
          </div>

          <div class="form-group">
           <%= f.label :password_confirmation %><br/>
           <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>

          <%= f.button "S'enregistrer" , class: 'btn btn-login', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Enregistrement en cours..."} %>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
