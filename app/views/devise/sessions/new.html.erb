<% @title = "signin" %>
<%= render :partial => 'shared/connected'%>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="login centered-login">
           <%= devise_error_messages! %>
        <button type="button" class="btn btn-twt-social"data-toggle="popover" title="Popover title" data-content=" Pour poster une annonce , cliquer ici pour aussi faire l'enregistrement"><i class="fa fa-twitter fa-lg"></i>
        Se connecter avec twitter 
        </button>
        <div class="separator"></div>
        <%= link_to " Se connecter avec facebook", user_omniauth_authorize_path(:facebook),class: "btn btn-fa-social"%><br>     
        <p>...Ou avec votre nom d'utilisateur et votre mot de passe :</p>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <div class="input-group">
              <%= f.label :Username %><br/>
              <!--<div class="input-group-addon">@</div>-->
              <%= f.text_field :login, class: 'log' %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :password %><br/>
            <%= f.password_field :password, autocomplete: "off", class: 'pass' %>
          </div>
          <% if devise_mapping.rememberable? -%>
            <div class="checkbox">
                <label>
                  <%= f.check_box :remember_me %> Remember me
                </label>
            </div>
          <% end -%>
          <%= f.button "Connecter" , class: 'btn btn-login', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Connexion en cours..."} %>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
