<% if current_user.heart?(listing) %>
  <%= button_to "liked", {:action=>'unheart', :controller =>'hearts', :listing_id => listing.id},class: 'btn btn-success btn-like', remote: true, method: :delete  %>
<% else %>
  <%= button_to "like", {:action =>'heart', :controller => 'hearts', :listing_id =>listing.id},class:'btn btn-default btn-like', remote: true  %>
<% end %>