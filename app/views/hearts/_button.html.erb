<% if current_user.heart?(listing) %>
  <%= icon_button_to fa_icon(:heart, text: "liked"), {:action=>'unheart', :controller =>'hearts', :listing_id => listing.id},class: 'btn btn-success btn-like like-left-slide', remote: true, method: :delete  %>
<% else %>
  <%= icon_button_to fa_icon(:heart, text: "like"), {:action =>'heart', :controller => 'hearts', :listing_id =>listing.id},class:'btn btn-default btn-like like-left-slide', remote: true  %>
<% end %>