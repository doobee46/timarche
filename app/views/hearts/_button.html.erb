<% if current_user.heart?(listing) %>
  <%= icon_button_to fa_icon(:check, text: "liked"), {:action=>'unheart', :controller =>'hearts', :listing_id => listing.id},
    class: 'round-button', remote: true, method: :delete  %>
<% else %>
  <%= icon_button_to fa_icon(:plus, text: "like"), {:action =>'heart', :controller => 'hearts', :listing_id =>listing.id},
    class:'round-button', remote: true  %>
<% end %>