<body id="bd_list">
<%@title = 'favorites' %>
<div class="container clearfix">
  <div class="row">
    <div class="col-md-12">
      <div class="main_pages switcher">
        <h3>Mes Annonces Favoris.</h3>
        <p>Découvrez les plus prisés dans le marché.</p>
        <div class="btn-group switcher-left" role="group" aria-label="...">
           <a href ="/browse" class="btn btn-default">
              <span class="fa fa-arrow-circle-o-left"></span>Retour a la liste
           </a> 
            <a href ="/recent" class="btn btn-default">
              <span class="fa fa-clock-o"></span>Nouveautés
           </a> 
          <% unless @title =='popular' %>
           <a href ="/popular" class="btn btn-default">
              <span class="fa fa-fire"></span>Populaires
           </a>  
          <%end%>
        </div>
      </div>
      <% if @favorites.blank? %>
        <div class="col-md-6 col-md-offset-3">
           <p class="no_results ">nous n'avons pas encore de données à vous montrer, restez à l'écoute plus est en route. </p>
        </div>
      <% else %>
      <div class="item_list" id="listings">
         <%= render @favorites%>         
      </div>
      <% end %>
      <%= will_paginate @favorites, renderer: BootstrapPagination::Rails, class: "pagination pagination-sm" %>
    </div>
    
  </div>
</div>