<table id="cur_listing" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Thumbs</th>
            <th>Publication Id</th>
            <th>Title</th>
            <th>Status</th>
            <th>Listing Price</th>
            <th>Total Views</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
      <%@listings.each do |listing| %>
        <tr>
            <td><%= link_to (image_tag listing.image.url(:avatar),size:"30x30"), listing_path(listing) %></td>
            <td><span class="label label-primary pub_id"><%= listing.listing_number %></span> </td>
            <td><%= link_to listing.name, listing_path(listing) %> </td>
            <td><span class="label label-success pub_id">Published</span></td>
            <td>Gdes <%=(listing.price)%></td>
            <td><%=listing.impressions_count%></td>
            <td>
                <div class="dash_actions">
                    <ul>
                      <li>
                        <%= link_to content_tag(:i, "", class: "fa fa-pencil-square-o"),
                           edit_listing_path(listing),"data-toggle" => "modal","data-target" => "#myEdit"%>
                        </li>
                      <li><a href="#"><i class="fa fa-reply " data-toggle="tooltip" title="Publish listing"></i></a></li>
                      <li><a href="#"><i class="fa fa-trash "data-toggle="tooltip" title="delete listing"></i></a></li>
                    </ul>
                  </div>
            </td>
        </tr>
      <%end%>
    </tbody>
</table>


