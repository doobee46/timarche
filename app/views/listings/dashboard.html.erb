<html>
<head>
<style type='text/css'>
   html, body {height: 100%; margin: 0}
   #content {width: 100%; height: 100%}
   #left {width: 212px; height: 100%; float: left; background-color: rgb(255,255,255)}
   #right {margin-left: 212px; height: 100%; background-color: #F0F0F0}
</style>
</head>
<body>
<div id='content'>
   <div id='left'>
	   	<%= link_to image_tag("logo.png", class: 'dash_logo'), main_app.root_path %>
	   	<p class="sidetitle smaller">Listings Dashboard</p>
	   	<div class="dash-avatar">
	   		<%=image_tag current_user.avatar.url(:amedium), class: 'dash-img img-circle', size: "100x100"%>
	   	    <h3 class="sidetitle"><%= current_user.name%></h3>
	   	    <div class="dash-logout ">
	   	    	<%= link_to main_app.destroy_user_session_path, data: { no_turbolink: true } do %>
                <i class="fa fa-power-off"></i>
                <% end %>
	   	    </div>
   	    	
	   	    
	   	</div>   	
   </div>
   <div id='right'>
   	<div class="container">
        <div class="row clearfix">
            <div class="col-md-12 column">
                <div class="row clearfix">
                    <div class="col-md-8 column">
                        <div class="page-header">
                            <h1>Listings Dashboard <small class=
                            "smaller"><%=Time.now.strftime("%B %e, %Y at %I:%M %p")%></small></h1>
                        </div>
                        <button type="button" class="btn btn-post" data-toggle="modal" data-target="#myModal">Poster des Annonces</button>
                        <!---<h3 class="text-left">Listings Published and Active</h3>-->
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                Listings Published and Active
                            </div>

                            <table class=
                            "table table-striped table-hover table-condensed">
                                <thead>
                                    <tr>
                                        <th>Listing number</th>

                                        <th>Product name</th>

                                        <th>Product Price</th>

                                        <th>Date creation</th>

                                        <th>Actions</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <% @listings.each do|listing|%>

                                    <tr>
                                        <td class="success">
                                        <%=listing.listing_number%></td>

                                        <td><%=listing.name%></td>

                                        <td><%=listing.price%></td>

                                        <td><%=listing.created_at%></td>

                                        <td>
                                        <%= link_to edit_listing_path(listing), class: "btn btn-primary btn-xs" do %>
                                        <span class="glyphicon glyphicon-edit"></span>
                                        <%end%>
                                        <%= link_to listing, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-xs" do %>
                                        <span class="glyphicon glyphicon-trash"></span>
                                        <%end%>
                                        </td>
                                    </tr>
                                    <%end%>
                                </tbody>
                            </table>
                        </div>

                        <div>
                            <%= will_paginate @listings, renderer: BootstrapPagination::Rails, class: "pagination pagination-sm" %>
                        </div><!--<h3>
h3. Lorem ipsum dolor sit amet.
</h3>-->

                        <div class="panel panel-default">
                            <div class="panel-heading">
                                Current orders
                            </div>

                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>

                                        <th>Product</th>

                                        <th>Payment Taken</th>

                                        <th>Status</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <tr>
                                        <td>1</td>

                                        <td>TB - Monthly</td>

                                        <td>01/04/2012</td>

                                        <td>Default</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <div>
                            <%= will_paginate @listings, renderer: BootstrapPagination::Rails, class: "pagination pagination-sm" %>
                        </div>
                    </div>

                    <div class="col-md-4 column">
                      	<ul class="statbox">
					   		<li></li>
					   		<li></li>
					   	</ul>  
                    </div>
                </div>
            </div>
        </div>
    </div>
   <%= render :partial => 'listings/form'%>
   </div>
</div>
</body>
</html>

