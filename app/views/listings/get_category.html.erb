<body id="bd_list">
<% @title = "browse" %>
<div class="container clearfix">
  <div class="row">
    <div class="col-md-12">
      <div class="main_pages switcher">
        <h3>Touts les Produits</h3>
        <p>Découvrez les produits de partout dans le marché.</p>
        <div class="btn-group" role="group" aria-label="...">
           <a href ="/recent" class="btn btn-default">
              <span class="fa fa-clock-o"></span>Recent
           </a> 
           <a href ="/popular" class="btn btn-default">
              <span class="fa fa-fire"></span>Trending
           </a>  
        </div>
      </div>
      <div class="item_list" id="listings">
         <%= render @listings %>          
      </div>
      <%= will_paginate @listings, renderer: BootstrapPagination::Rails, class: "pagination pagination-sm" %>
    </div>
    
  </div>
</div>