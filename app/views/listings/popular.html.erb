<body id="bd_list">
<% @title = 'popular' %>
<div class="container clearfix">
  <div class="row">
    <div class="col-md-12">
      <div class="main_pages switcher">
        <h3>Ajouts Populaire</h3>
        <p>Découvrez les plus prisés dans le marché.</p>
        <div class="btn-group" role="group" aria-label="...">
          <%= link_to browse_path, class: "btn btn-default" do %>
            <span class="fa fa-arrow-circle-o-left"></span>Back
          <%end%>
          <%= link_to recent_path ,class: "btn btn-default" do %>
            <span class="fa fa-clock-o"></span>Recent
          <%end%>
          <% unless @title =='popular' %>
          <%= link_to popular_path , class: "btn btn-default" do %>
            <span class="fa fa-fire"></span>Trending
          <%end%>
          <%end%>
        </div>
      </div>
      <% if @popular.blank? %>
        <div class="col-md-6 col-md-offset-3">
           <p class="no_results "> we don't have data to show you yet, stay tuned more is on the way​. </p>
        </div>
      <% else %>
      <div class="item_list" id="listings">
         <%= render @popular%>         
      </div>
      <% end %>
      <%= will_paginate @popular, renderer: BootstrapPagination::Rails, class: "pagination pagination-sm" %>
    </div>
    
  </div>
</div>

