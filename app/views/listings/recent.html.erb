<body id="bd_list">
<% @title = 'recent' %>
<div class="container clearfix">
  <div class="row">
    <div class="col-md-12">
      <div class="main_pages switcher">
        <h3>Nouveautés</h3>
        <p>Découvrez les tous dernier ajouts dans le marché.</p>
        <div class="btn-group switcher-left" role="group" aria-label="...">
          
           <a href ="/browse" class="btn btn-default">
              <span class="fa fa-arrow-circle-o-left"></span>Retour a la liste
           </a>
          <% unless @title =='recent' %>
           <a href ="/recent" class="btn btn-default">
              <span class="fa fa-clock-o"></span>Nouveautés
           </a> 
          <%end%>
           <a href ="/popular" class="btn btn-default">
              <span class="fa fa-fire"></span>Populaires
           </a>
        </div>
      </div>
      <% if @recent.blank? %>
        <div class="col-md-6 col-md-offset-3">
           <p class="no_results "> we don't have data to show you yet, stay tuned more is on the way </p>
        </div>
      <% else %>
      <div class="item_list" id="listings">
         <%= render @recent %>         
      </div>
      <% end %>
      <%= will_paginate @recent, renderer: BootstrapPagination::Rails, class: "pagination pagination-sm" %>
    </div>
    
  </div>
</div>

