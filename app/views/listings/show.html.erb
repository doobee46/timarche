<body class="pr-show">
<%= render :partial => 'shared/midsearch'%>	
<div class="product">
		<div class="container">
		    <div class="row">
				<div class="col-md-12">
					<div class="title_head">
						<!--<span class="label label-primary label-id">Publication Id:<%=@listing.listing_number%></span>-->
						<p class="desc_title"><%=@listing.name%></p>
						<p class="desc"><%=@listing.description%></p>
						<!--<span class="store"> En vente par :<%=link_to @listing.user.username%></span>-->
					</div>
				</div>
			</div>
		</div>

	<div class"container">
		<div class="row">
			<div class="col-md-12">
				<div class="col-md-7">
					<div class="social_icon">
					</div>
					<div class="first_col">
						<%=image_tag @listing.image.url(:large)%>
					</div>
					<div class="stats">
					<%= render :partial => 'listings/like'%>	
					<%= render :partial => 'listings/viewcount'%>
					</div>
					<%= social_share_button_tag(@listing.description, :popup => "true")%>
					<div class="body_desc">
					   <p><%=@listing.description%></p>
					</div>
					<div class="comments">
					   <%= commontator_thread(@listing) %>
					</div>
				</div>
				<div class="col-md-2">
					<div class="mid_col">
						<% @listing.pictures.each do |picture| %>
						<%= image_tag picture.image.url(:medium)%>
						<%end %>
					</div>
				</div>
				<div class="col-md-3">
					<div class="last_col">
						<div class="show_price">
						<span>Gdes</span> <%=@listing.price%>
						</div>
						<%= render :partial => 'listings/card'%>
						<button class="btn btn-danger btn-lg btn-price">Acheter</button>
					</div>
					<div class="last_col">
						<div class="contact">
						  <%= image_tag @listing.user.avatar.url(:amedium), class: "img-circle"%>
						</div>
						<div class="listing_author">
						  <span>En vente par</span>
						  <h3><%= link_to @listing.user.username %></h3>
						</div>
						<button class="btn btn-danger btn-lg btn-cont">Contacter</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>