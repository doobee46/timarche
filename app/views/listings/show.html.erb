<body class="pr-show">
<% @title = 'show' %>
<div class="container clearfix">
  <div class="row">
    <div class="col-md-12">
      <div class="main_pages switcher">
        <h3><%=@listing.name%></h3>
        <p>Published by : <%=@listing.user.name%></p>
        <div class="btn-group" role="group" aria-label="...">
           <a href ="/browse" class="btn btn-default">
              <span class="fa fa-arrow-circle-o-left"></span>back
           </a>
           <a href ="/recent" class="btn btn-default">
              <span class="fa fa-clock-o"></span>Recent
           </a> 
           <a href ="/popular" class="btn btn-default">
              <span class="fa fa-fire"></span>Trending
           </a> 
        </div>
      </div>    
<div class="product">
		<div class="container">
		    <div class="row">
				<div class="col-md-12">
					<div class="title_head">
						<!--<span class="label label-primary label-id">Id:<%#=@listing.listing_number%></span>-->
						<p class="desc_title"><%=@listing.name%></p>
						<p class="desc"><%=@listing.description%></p>
					</div>
				</div>
			</div>
		</div>

	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="col-md-7">
					<div class="social_icon">
					</div>
					<div class="first_col">
						<%=image_tag @listing.image.url(:large)%>
					</div>
					<div class="stats">
					<%= render :partial => 'listings/like'%>	
					<%= render :partial => 'listings/viewcount'%>
          </div>
          <p class="thread_header positioned">Description de Produits</p>
					<div class="body_desc">
					   <p><%=@listing.description%></p>
					</div>
					<div class="comments">
					   <%= commontator_thread(@listing) %>
					</div>
				</div>
				<div class="col-md-2">
					<div class="mid_col">
						<% @listing.pictures.each do |picture| %>
						<%= image_tag picture.image.url(:medium)%>
						<%end %>
					</div>
				</div>
				<div class="col-md-3">
					<div class="last_col">
						<div class="show_price">
					    <%if @listing.display_usd == true %>
                          <span class="item_price"><%=number_to_currency(@listing.price, unit:"$", precision: 2)%></span> 
                        <% else %>
                          <span class="item_price"><%=number_to_currency(@listing.price, unit:"HTG", precision: 2)%></span> 
                        <%end%>
						</div>
						  <%= render :partial => 'listings/card'%>
						<button class="btn btn-danger btn-lg btn-price">Acheter</button>
					</div>
					<div class="last_col">
						<div class="contact">
						  <%= image_tag @listing.user.avatar.url(:amedium), class: "img-circle"%>
						</div>
						<div class="listing_author">
						  <span>En vente par</span>
						  <h3><%= link_to @listing.user.username %></h3>
						</div>
              <% unless current_user == @user %>
              <%= link_to new_message_path(to: @listing.user.id), class: 'btn btn-danger btn-lg btn-cont' do %>
              <i class="fa fa-pencil-square-o"></i>Contact Vendeur
              <% end %>
              <% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>