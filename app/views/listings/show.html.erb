<body class="pr-show">
<%= render :partial => 'shared/midsearch'%>	
<div class="product">
		<div class="container">
		    <div class="row">
				<div class="col-md-12">
					<div class="title_head centered">
						<p class="desc"><%=@listing.description%></p>
						<span class="store"> En vente par :<%=link_to @listing.user.username%></span>
					</div>
				</div>
			</div>
		</div>

	<div class"container">
		<div class="row">
			<div class="col-md-12">
				<div class="col-md-7">
					<div class="social_icon">
					</div>
					<div class="first_col">
						<%=image_tag @listing.image.url%>
					</div>
					<div class="body_desc">
					   <p><%=@listing.description%></p>
					</div>
					<div class="comments">
					   <%= commontator_thread(@listing) %>
					</div>
				</div>
				<div class="col-md-2">
					<div class="mid_col">
						<%=image_tag @listing.image.url(:thumb)%>
						<%=image_tag @listing.image.url(:thumb)%>
						<%=image_tag @listing.image.url(:thumb)%>
					</div>
				</div>
				<div class="col-md-3">
					<div class="last_col">
						<div class="show_price">
						<%=number_to_currency(@listing.price, precision: 2, unit: "Gdes", delimiter: "",separator: ",")%>
						</div>
						<button class="btn btn-danger btn-lg btn-price">Acheter</button>
					</div>
					<div class="last_col">
						<div class="contact">
						  <%= image_tag @listing.user.avatar.url(:medium), class: "img-circle"%>
						</div>
						<div class="listing_author">
						  <h3><%= link_to @listing.user.username%></h3>
						</div>
						<button class="btn btn-danger btn-lg btn-cont">Contacter</button>
					</div>
				</div>
			</div>
		</div>
	</div>









</div>