<%= link_to listing_path(notification.notifiable.slug, anchor: dom_id(notification.notifiable)), class: "dropdown-item #{"unread" if !notification.read_at?}" do %>
  <strong><%= notification.actor.username %></strong>
  <%= notification.action %>
  a <%= notification.notifiable_type.underscore.humanize.downcase %> <strong><%=notification.notifiable.name%></strong>
<% end %>