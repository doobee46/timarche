<% @title = "browse" %>
<div class="container clearfix">
  <div class="row">
    <div class="col-md-12">
      <div class="main_pages switcher">
        <h3>Touts les Produits</h3>
        <p>Découvrez les produits de partout dans le marché.</p>
        <div class="btn-group" role="group" aria-label="...">
          <%= link_to browse_path, class: "btn btn-default" do %>
            <span class="fa fa-home"></span>Live feed
          <%end%>
          <%= link_to recent_path ,class: "btn btn-default" do %>
            <span class="fa fa-clock-o"></span>Recent
          <%end%>
          <%= link_to popular_path , class: "btn btn-default" do %>
            <span class="fa fa-fire"></span>Trending
          <%end%>
        </div>
      </div>
      <div class="item_list">
          <ul>
           <li class="item">
                <a href=""><%=image_tag('demo_ad.jpg')%></a>              
                <div class="info">
                  <span class="item_title">Publicité</span>
                </div>                          
            </li>
            <% @listings.each do |listing| %>
              <li class="item">
                    <%= link_to (image_tag listing.image.url(:medium)), listing_path(listing) %>               
                  <div class="info">
                    <span class="item_title"><%= listing.name %></span>
                    <span class="avatar_info">
                       <%=link_to seller_path(listing.user) do %>
                       <%=image_tag listing.user.avatar.url(:athumb), size: "20x20", alt: "avatar",class: "img-circle"%>
                       <p><%=listing.user.username %></p>
                       <%end%>
                    </span>
                    <span class="item_price">Gdes <%=(listing.price)%>
                    </span>
                  </div>

                  <% if listing.created_at >= (Date.today) %>
                    <span class="label label-green">New</span>
                  <%end%>
                 
                  <div class="block-actions clearfix">
                    <%=form_for(Like.new,:remote => true) do |f| %>
                    <%= f.hidden_field :listing_id, value: listing.id %>
                    <%= f.button " " , class: 'btn btn-success btn-sm', data: {disable_with: " saving..."} do %>
                       <span class="glyphicon glyphicon-heart"></span> like
                    <%end%>   
                    <%end%>
                  </div>                                 
              </li>
            <% end %>
            <a class="ubm-banner" data-id="1"></a>
          </ul>  
      </div>
    </div>
    <div>
      <%= will_paginate @listings, renderer: BootstrapPagination::Rails, class: "pagination pagination-sm" %>
    </div>   
  </div>
</div>