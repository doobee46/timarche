<div class="header">
  <div class="mini_header">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <ul class="mini_nav clearfix">
             <%if user_signed_in?%>
              <li class="clearfix">
                <a href="">
                  <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-expanded="false">
                  <span class=" bell fa fa-bell"><span class=" notification circle"></span></span>
                  </a>
                  <ul class="activ dropdown-menu" role="menu">
                    <li><a href="#"><span class="fa fa-mobile"></span>Contact</a></li>
                    <li><a href="#"><span class="fa fa-sign-out"></span>Jobs</a></li>
                  </ul>
                </a>
              </li>
              <li>
                <%= link_to main_app.conversations_path do%>
                <span class=" env fa fa-envelope"></span>
                  <% if current_user.mailbox.receipts.count %>
                      <span class="circle"></span>
                  <%end%>
                <%end%>
              </li>
              <li role="presentation" class="dropdown">
                <a class="dropdown-toggle avat" data-toggle="dropdown" href="#" role="button" aria-expanded="false">
                  <span class="mini_avatar">
                     <%= image_tag current_user.avatar.url(:athumb), class: "img-circle",size: "22x22" %>
                  </span>
                  <span class="caret"></span>
                </a>
                <ul class="dropdown-menu" role="menu">
                  <li>
                    <%= link_to main_app.dashboard_path, data: { no_turbolink: true } do %>
                    <span class="glyphicon glyphicon-tasks"></span> Dashboard
                    <% end %>
                  </li>
                  <li>
                    <%= link_to main_app.edit_user_registration_path, data: { no_turbolink: true } do %>
                      <span class="fa fa-pencil-square-o"></span> Edit Account
                    <% end %> 
                  </li>
                  <li>
                    <%= link_to main_app.destroy_user_session_path, method: :delete, data: { no_turbolink: true } do %>
                      <span class="fa fa-sign-out"></span> DÃ©connexion
                    <% end %> 
                  </li>
                </ul>
              </li>
              <% else %>
              <li>
                <%= link_to "S'inscrire",main_app.user_registration_path %>
              </li>
              <li>
                <%= link_to "Se connecter",main_app.user_session_path %> 
              </li>
            <%end%>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="main_header">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="head_brand col-md-2">
             <%= link_to image_tag("logo.png", class: ' animated bounce'), main_app.root_path %>
          </div>
          <div class="col-md-5">
            <div class="form_nav">
              <%= search_form_for @q , :class => "topnav-form" do  |f| %>
                  <div class="topnav_search">
                    <%= f.search_field :name_cont, placeholder: 'Recherche de produits, les boutiques, les collections, et vendeurs..', class: 'topnav_inp' %>
                  </div>
                  <%= f.button "Submit" , :class =>'search-button' do %>
                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                  <%end%>
              <% end %> 
            </div>            
          </div>
          <div class="main_menu col-md-5">
            <ul class="main_nav pull-right">
               <li><%=link_to main_app.browse_path, data: { no_turbolink: true } do %>
                  <span class="glyphicon glyphicon-list-alt"></span>Publications
                <%end%>
               </li>
               <li>
                  <%= link_to main_app.sellers_path , data: { no_turbolink: true } do %>
                    <span class="glyphicon glyphicon-th"></span> Les vendeurs
                  <% end %> 
                </li>
               <!--<li><button type="button" class="btn btn-post" data-toggle="modal" data-target="#myModal">Poster des Annonces</button></li>-->
            </ul> 
          </div>
        </div>
      </div>
    </div>        
  </div>
  <% unless @title != "browse" %>
  <%= render :partial => 'shared/category'%>
  <%end%>
</div> 